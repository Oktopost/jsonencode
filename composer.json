	"type": "library",
	"license": "MIT",
    "authors": [
        {
            "name": "Alexey Puchkov",
            "email": "alexey.pkv@gmail.com"
        },
        {
            "name": "Ivan Demchenkov",
            "email": "demchenkov.ivan@gmail.com"
        }
    ],
    "require": {
		"php": ">=7.1"
	},
	"require-dev": {
		"phpunit/phpunit": "^6.2",
		"satooshi/php-coveralls": "^1.0"
	},
    "autoload": {
